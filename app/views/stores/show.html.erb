<% if @store %>
  <div class="container">
    <h1 class="title"><%= @store.name %></h1>

    <div class="section">
      <h2 class="subtitle">Available Shoes</h2>

      <% if @shoes.any? %>
        <div class="columns is-multiline">
          <% @shoes.each do |shoe| %>
            <div class="column is-one-quarter">
              <div class="box">
                <h3 class="title is-5"><%= shoe.brand_name %> <%= shoe.style %></h3>
                <p><strong>Color:</strong> <%= shoe.color %></p>
                <p><strong>Size:</strong> <%= shoe.size %></p>
                <p><strong>Price:</strong> $<%= sprintf('%.2f', shoe.price) %></p>
                <%= link_to 'View Details', store_shoe_path(@store, shoe), class: 'button is-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p>No shoes available at this store.</p>
      <% end %>
    </div>
  </div>
<% else %>
  <p>Store not found.</p>
<% end %>
